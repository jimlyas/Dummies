<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epizy.someone.jimly_1202150091_modul3.barcode">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/sourcebarcode"
            android:layout_weight="3"
            android:hint="Insert Text here"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="ngebuatbarcode"
            android:textAllCaps="false"
            android:text="Encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tulisandibarcode"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/entrybarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/entrybarcode"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />
</RelativeLayout>
