<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:theme="?attr/selectableItemBackground"
            android:id="@+id/root_aer"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@color/colorPrimary"
                android:text="NAMA AERNYA"
                android:id="@+id/nama_aer"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Disini nanti ada penjelasan aernya"
                android:textColor="#707070"
                android:id="@+id/detail_aer"
                android:layout_below="@id/nama_aer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>